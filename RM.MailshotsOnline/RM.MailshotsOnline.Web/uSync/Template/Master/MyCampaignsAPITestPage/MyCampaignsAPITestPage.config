<?xml version="1.0" encoding="utf-8"?>
<Template>
  <Name>My Campaigns API Test Page</Name>
  <Alias>MyCampaignsAPITestPage</Alias>
  <Design><![CDATA[@using ClientDependency.Core.Mvc
@inherits Glass.Mapper.Umb.Web.Ui.GlassViewPage<RM.MailshotsOnline.Entities.PageModels.ContentPage>
@{
    Layout = "Master.cshtml";
    Html.RequiresJs("~/scripts/loginfunctions.js", 2);
    Html.RequiresJs("~/scripts/campaignstest.js", 3);
}

<div class="content">
    <h1>@Model.Name</h1>
    @Umbraco.RenderMacro("Breadcrumbs")
    <div class="rich-text">
        @Html.Raw(Model.MainContent)
    </div>
    <div class="my-campaigns">
        <fieldset id="loginForm" style="display:none;">
            <p>You must be logged in to view your campaigns</p>
            <div><label for="email">Email:</label><input type="email" id="email" /></div>
            <div><label for="password">Password:</label><input type="password" id="password" /></div>
            <div><button id="loginButton">Login</button></div>
        </fieldset>
        <fieldset id="myCampaigns" style="display:none;">
            <h2>My campaigns</h2>
            <div id="loading" style="display:none;">
                <div id="fountainG">
                    <div id="fountainG_1" class="fountainG"></div>
                    <div id="fountainG_2" class="fountainG"></div>
                    <div id="fountainG_3" class="fountainG"></div>
                    <div id="fountainG_4" class="fountainG"></div>
                    <div id="fountainG_5" class="fountainG"></div>
                    <div id="fountainG_6" class="fountainG"></div>
                    <div id="fountainG_7" class="fountainG"></div>
                    <div id="fountainG_8" class="fountainG"></div>
                </div>
            </div>
            <p id="noCampaignsMessage" style="display: none;">No campaigns to display</p>
            <table id="campaignList" style="display: none;" cellpadding="0" cellspacing="0"></table>
        </fieldset>
        <fieldset id="addCampaignForm" style="display:none;">
            <h2>Add a campaign</h2>
            <div><label for="campaignName">Name:</label><input type="text" id="campaignName" /></div>
            <div><label for="notes">Notes:</label><textarea cols="30" rows="4" id="notes"></textarea></div>
            <div>
                <label for="mailshot">Mailshot design:</label>
                <select id="mailshot"></select>
            </div>
            <div>
                <label for="distributionList">Distribution list:</label>
                <select id="distributionList">
                    <option value="">-- TBC after data work is complete--</option>
                </select>
            </div>
            <div id="readonlyFields" style="display:none;">
                <div><label>Status:</label><input type="text" disabled="disabled" id="status" /></div>
                <div><label>Has own data:</label><input type="text" disabled="disabled" id="hasOwnData" /></div>
                <div><label>Has rented data:</label><input type="text" disabled="disabled" id="hasRentedData" /></div>
            </div>
            <div><button id="saveCampaign">Save</button> &nbsp; <button id="cancelButton">Cancel</button></div>
            <input type="hidden" id="campaignId" />
        </fieldset>
    </div>
</div>]]></Design>
  <Master>Master</Master>
</Template>