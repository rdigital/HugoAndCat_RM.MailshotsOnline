<?xml version="1.0" encoding="utf-8"?>
<Template>
  <Name>Member API Test Page</Name>
  <Alias>MemberAPITestPage</Alias>
  <Design><![CDATA[@using ClientDependency.Core.Mvc
@inherits Glass.Mapper.Umb.Web.Ui.GlassViewPage<RM.MailshotsOnline.Entities.PageModels.ContentPage>
@{
    Layout = "Master.cshtml";
    Html.RequiresJs("~/scripts/logintest.js", 2);
}

<div class="content">
    <h1>@Model.Name</h1>
    @Umbraco.RenderMacro("Breadcrumbs")
    <div class="rich-text">
        @Html.Raw(Model.MainContent)
    </div>
    <form>
        
        <fieldset>
            <h2>Check if I'm logged in:</h2>
            <div><label>Logged in status:</label><input type="text" disabled="disabled" id="loggedInStatus" /></div>
            <div><button id="checkLoggedInStatus">Check</button></div>
        </fieldset>

        <fieldset>
            <h2>Login and logout</h2>
            <div><label for="email">Email:</label><input type="text" id="email" name="email" /></div>
            <div><label for="password">Password:</label><input type="password" id="password" name="password" /></div>
            <div><button id="login" disabled="disabled">Login</button> &nbsp; <button id="logout" disabled="disabled">Logout</button></div>
        </fieldset>

    </form>
</div>
]]></Design>
  <Master>Master</Master>
</Template>