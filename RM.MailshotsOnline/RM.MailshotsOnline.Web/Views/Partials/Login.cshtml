@model RM.MailshotsOnline.Entities.ViewModels.LoginViewModel

@using (Html.BeginUmbracoForm("LoginForm", "LoginSurface"))
{
    @Html.ValidationSummary()
    <div>
        <label for="Email">@Model.PageModel.EmailLabel</label>
        @Html.EditorFor(m => m.Email)
    </div>
    <div>
        <label for="Password">@Model.PageModel.PasswordLabel</label>
        @Html.PasswordFor(m => m.Password)
    </div>
    <input type="submit" />
}
