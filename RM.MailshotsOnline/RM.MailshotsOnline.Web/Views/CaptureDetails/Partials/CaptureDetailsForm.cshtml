        @Html.EditorFor(m => m.Town)
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.Postcode)
    </div>
    <div>
        @Html.LabelFor(m => m.Postcode, Model.PageModel.PostcodeLabel + " *")
