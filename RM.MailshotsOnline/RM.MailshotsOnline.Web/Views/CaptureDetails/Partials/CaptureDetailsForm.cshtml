@model RM.MailshotsOnline.Entities.ViewModels.CaptureDetailsViewModel

@if (ViewBag.ErrorMessage != null)
{
    <div>@ViewBag.ErrorMessage</div>
}

@using (Html.BeginUmbracoForm("CaptureDetails", "CaptureDetailsSurface"))
{
    @Html.HiddenFor(m => m.CampaignId)
    <p><a href="@Model.PageModel.BackToCampaignUrl">&lt; @Model.PageModel.BackToCampaignLinkText</a></p>
    <h2>@Model.PageModel.DetailsPrompt</h2>
    <h3>@Model.PageModel.ChooseAddressSubtitle</h3>

    <div>
        * @Model.PageModel.RequiredFieldPrompt
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.OrganisationName)
    </div>
    <div>
        @Html.LabelFor(m => m.OrganisationName, Model.PageModel.BusinessNameLabel + " *")
        @Html.EditorFor(m => m.OrganisationName)
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.JobTitle)
    </div>
    <div>
        @Html.LabelFor(m => m.JobTitle, Model.PageModel.JobTitleLabel + " *")
        @Html.EditorFor(m => m.JobTitle)
    </div>

    <h3>@Model.PageModel.OrganisationAddressSubtitle</h3>

    <div>
        @Html.ValidationMessageFor(m => m.FlatNumber)
    </div>
    <div>
        @Html.LabelFor(m => m.FlatNumber, Model.PageModel.FlatNumberLabel)
        @Html.EditorFor(m => m.FlatNumber)
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.BuildingNumber)
    </div>
    <div>
        @Html.LabelFor(m => m.BuildingNumber, Model.PageModel.BuildingNumberLabel + " *")
        @Html.EditorFor(m => m.BuildingNumber)
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.BuildingName)
    </div>
    <div>
        @Html.LabelFor(m => m.BuildingName, Model.PageModel.BuildingNameLabel)
        @Html.EditorFor(m => m.BuildingName)
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.StreetAddress1)
