    </div>
    <div>
        @Html.ValidationMessageFor(m => m.Country)
    </div>
    <div>
        @Html.LabelFor(m => m.Country, Model.PageModel.CountryLabel + " *")
        @Html.EditorFor(m => m.Country)
    </div>

    <h3>@Model.PageModel.TelephoneNumbersSubtitle</h3>

    <div>
        @Html.ValidationMessageFor(m => m.WorkPhone)
    </div>
    <div>
        @Html.LabelFor(m => m.WorkPhone, Model.PageModel.WorkPhoneLabel + " *")
        @Html.EditorFor(m => m.WorkPhone)
    </div>
    <div>
        @Html.ValidationMessageFor(m => m.Mobile)
    </div>
    <div>
        @Html.LabelFor(m => m.Mobile, Model.PageModel.MobileNumberLabel)
        @Html.EditorFor(m => m.Mobile)
    </div>


    <input type="submit" value="@Model.PageModel.ContinueToPaymentButton &gt;" />
