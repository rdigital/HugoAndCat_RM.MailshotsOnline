@using RM.MailshotsOnline.Entities.PageModels
@inherits Glass.Mapper.Umb.Web.Ui.GlassViewPage<RM.MailshotsOnline.Entities.PageModels.ListCreate>
@{
    Layout = "~/Views/Master.cshtml";
}

<div class="content">
    <h1>@Model.Name</h1>
    <!-- Add in the steps here -->
    @switch (Model.CurrentStep)
    {
        case CreateListStep.AddNewContacts:
            @Html.Action("ShowCreateListForm", "ModifyListSurface", new {model = Model})

            break;
        case CreateListStep.ConfirmFields:
            @Html.Action("ShowConfirmFieldsForm", "ModifyListSurface", new { model = Model })

            break;
        case CreateListStep.FixIssues:
            @Html.Action("ShowCreateListForm", "ModifyListSurface", new { model = Model })

            break;
    }
</div>

